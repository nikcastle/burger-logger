<header>
   <img src="../assets/images/family-heads.png" class="heads">
</header>

{{#if burgers}}
<h1>Burgers of The Day</h1>

<section class="containerOne">
    <div class="not-eaten">
        <h2 class="item">Burgers to Eat: </h2>
        <ul class="item2">

            {{#each burgers}}
            {{#unless devoured}}
            {{>burgers/burger-block devour=true}}
            {{/unless}}
            {{/each}}

        </ul>
    </div>
    <div class="eaten">
        <h2 class="item">Burgers You've Eaten: </h2>
        <ul class="item2">
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block devour=false}}
            {{/if}}
            {{/each}}
        </ul>
    </div>

    {{/if}}
</section>

<section class="containerTwo">
    <h2 class="item">Add a Burger</h2>
    <form class="create-form">

        <div class="form-group">
            <input type="text" id="burg" name="name" placeholder="Burger Name">
        </div>
        <div class="addBtn">
        <button type="submit" class="addABurger">Add Burger</button>
        </div>
    </form>
</section>

<footer>
     <img src="../assets/images/burgeroftheday.png" class="burger">
</footer>