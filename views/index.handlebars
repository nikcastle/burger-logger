<h1> Eat The Burger!</h1>

<div class="container">
<row class="rowOne">
    <div class="colOne">
<h2>Burgers to Eat</h2>
<ul>
    {{#each burgers}}
        {{#unless devoured}}
            {{>burgers/burger-block devoured=true}}
        {{/unless}}
    {{/each}}
</ul>
    </div>

<div class="colTwo">
<h2>Burgers You've Eaten</h2>
<ul>
    {{#each burgers}}
        {{#if devoured}}
             {{> burgers/burger-block devour=false}}
        {{/if}}
    {{/each}}
</ul>
</div>

<row class="rowTwo">
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="name">
  </div>

</row>

